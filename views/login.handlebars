<form class="login-form m-3 border border-dark">
  <div class="login">
    <h5 class="p-3 bg-dark text-white-50">Login</h5>
    <label for="email-login" class="p-2">Email:</label>
    <input type="text" id="email-login" />
  </div>
  <div>
    <label for="password-login" class="p-2">Password:</label>
    <input type="password" id="password-login" />
  </div>
  <div class="p-2">
    <button type="submit" class="btn btn-dark" style="color: #e2fce2;">Login</button>
  </div>
</form>
<form class="signup-form m-3 border border-dark">
  <div class="signup">
    <h5 class="p-3 bg-dark text-white-50">Sign Up</h5>
    <label for="username-signup" class="p-2">Username:</label>
    <input type="text" id="username-signup" />
  </div>
  <div>
    <label for="email-signup" class="p-2">Email:</label>
    <input type="text" id="email-signup" />
  </div>
  <div>
    <label for="password-signup" class="p-2">Password:</label>
    <input type="password" id="password-signup" />
  </div>
  <div class="p-2">
    <button type="submit" class="btn btn-dark" style="color: #e2fce2;">Sign Up</button>
  </div>
</form>
