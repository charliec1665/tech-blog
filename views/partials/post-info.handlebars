<article class="post border border-dark ">
      <div class="title p-2 bg-dark text-white-50">
        <a href="/post/{{id}}" target="_blank" class="text-white-50 text-decoration-none h5">{{title}}</a>
        <p class="justify-content-end" style="font-size: 14px;">Posted by {{user.username}} on {{format_date created_at}}</p>
        {{!-- <span>({{format_url post_url}})</span> --}} 
      </div>
      <div class="meta p-2">
        <p>{{comments.length}} {{format_plural "comment" comments.length}}</p>
      </div>
</article>