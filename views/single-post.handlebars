<div class="post-info m-3">
    {{> post-info post }}
</div>

{{#if loggedIn}}
<form class="comment-form m-3">
    <div>
        <textarea name="comment-body" class="col-sm-6 p-2"></textarea>
    </div>
    <div>
        <button type="submit" class="btn btn-dark" style="color: #e2fce2;">Add Comment</button>
    </div>
</form>
{{/if}}

<div class="comments m-3 mt-5"> 
    {{> comments post.comments}}
</div>

{{#if loggedIn}}
<script src="/javascript/comment.js"></script>
<script src="/javascript/upvote.js"></script>
{{/if}}